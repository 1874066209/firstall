/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
video{
  width: 100%;
  margin: 0;
  padding:0;
}
.danmuArea{
  display:flex;
  flex-direction:row;
}
input{
  border: 1px solid #937938;
  height: 100rpx;
  flex-grow: 1;/*扩张多余空间*/
}
button{
  color:white;
  background-color: #937938;
}
.videoList{
  width: 100%;
  min-height: 400rpx; 
}
.videoBar{
  width: 95%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #937938;
  margin: 10rpx;
}
image{
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
}
text{
  font-size: 45rpx;
  color:#937938;
  margin: 20rpx;
  flex-grow:1;
}