/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container{
  margin:0;
  padding:0;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: pink;
}
.detail{
  width:100%;
  display:flex;
  flex-direction: column;
}
.bar{
  display:flex;
  flex-direction: row;
  margin:20rpx 0;
}
.box{
  width:33.3%;
  text-align: center;
  display:flex;
  flex-direction: column;
  border:1px solid red;
}
text{
  font-size: 80rpx;
  color:blue;
}
image{
  width:220rpx;
}
.picker1{
  height: 40px;
  width:100%;
  text-align: center;
}